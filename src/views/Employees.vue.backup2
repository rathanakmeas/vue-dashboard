<script setup>
import { ref, onMounted, computed } from 'vue';
import { useRoute, useRouter } from 'vue-router';
import { useToast } from 'primevue/usetoast';
import Button from 'primevue/button';
import api from '../api';

const route = useRoute();
const router = useRouter();
const toast = useToast();

const employee = ref(null);
const loading = ref(false);
const activeTab = ref(0);
const departments = ref([]);

const employeeForm = ref({
  hireDate: null,
  probationEndDate: null,
  notes: ''
});

const employmentHistory = ref([
  {
    employeeId: '2891200261',
    letterNo: 'á˜á“áŸ’ááŸ’ášá¸/ášá”ášáŠá¼áŸ’á™/á¢ášáŸ’á“á€ááŸ„áŸ‡áá»ááŸ’á‰áŸ„',
    category: 'á¢á“áŸ’á á”áŸ’ášá¼ášá™áŸ',
    department: '',
    startDate: '2019-07-18',
    endDate: null
  }
]);

const employmentDocuments = ref([]);

const tabs = [
  { label: 'ğŸ“„ áŸá¼áá»ááá˜á¼áš', icon: 'pi pi-list' },
  { label: 'ğŸ“ á”áŸ’ášá¼á›á‘á½á“á¸ á“á¸á„á‡á¶áá·', icon: 'pi pi-folder' },
  { label: 'ğŸ“ á˜á¼á›á·á“', icon: 'pi pi-graduation-cap' },
  { label: 'ğŸ“ ááŸ„ááŸ’ááŸ„ášáŸ’á˜á»á„á€áŸáŸá„á˜áŸ', icon: 'pi pi-paperclip' },
  { label: 'ğŸ“œ á€á»á„áŸ„á”á„á“áŸ’áá¸ášáŸ„áŸá»á€á„', icon: 'pi pi-certificate' },
  { label: 'ğŸ› á€áŸ„ášáŸ„á”ášá›á„áŸ’á€á–á‘á¼á”ášá„', icon: 'pi pi-building' },
  { label: 'ğŸ– á€á»á“á·á€ááŸ’á™ááŸ‚á„áŸ’á€á–á¼ášá›', icon: 'pi pi-star' },
  { label: 'ğŸ“Š á€á»á„á¸á›á¼á”ááŸášá“á‘', icon: 'pi pi-chart-bar' }
];

onMounted(async () => {
  await fetchEmployee();
  await fetchDepartments();
});

const fetchEmployee = async () => {
  loading.value = true;
  try {
    const employeeId = route.params.id;
    const response = await api.get(`/api/employees/${employeeId}`);
    employee.value = response.data;
    
    // Initialize form
    employeeForm.value = {
      hireDate: employee.value.hireDate,
      probationEndDate: employee.value.probationEndDate,
      notes: employee.value.notes || ''
    };
  } catch (error) {
    console.error('Error fetching employee:', error);
    toast.add({
      severity: 'error',
      summary: 'Error',
      detail: 'Failed to load employee details',
      life: 3000
    });
  } finally {
    loading.value = false;
  }
};

const fetchDepartments = async () => {
  try {
    const response = await api.get('/api/departments');
    departments.value = response.data;
  } catch (error) {
    console.error('Error fetching departments:', error);
  }
};

const getDepartmentName = (deptCode) => {
  const dept = departments.value.find(d => d.code === deptCode);
  return dept ? dept.name : deptCode;
};

const getFullAddress = () => {
  if (!employee.value?.address) return '-';
  const addr = employee.value.address;
  const parts = [addr.street, addr.city, addr.province, addr.country].filter(Boolean);
  return parts.join(', ') || '-';
};

const translateGender = (gender) => {
  const translations = {
    'Male': 'á”áŸ’ášá»áŸ',
    'Female': 'áŸáŸ’ášá¸',
    'Other': 'á•áŸ’áŸáŸá„áŸ—'
  };
  return translations[gender] || gender;
};

const formatKhmerDate = (date) => {
  if (!date) return '-';
  const d = new Date(date);
  const day = String(d.getDate()).padStart(2, '0');
  const month = String(d.getMonth() + 1).padStart(2, '0');
  const year = d.getFullYear();
  return `ááŸ’á„áŸƒá‘á¸ ${day} ááŸ‚${month} á†áŸ’á“á¶áŸ†${year}`;
};

const formatDate = (date) => {
  if (!date) return '-';
  return new Date(date).toLocaleDateString('en-GB');
};

const formatFileSize = (bytes) => {
  if (!bytes) return '0 B';
  const k = 1024;
  const sizes = ['B', 'KB', 'MB', 'GB'];
  const i = Math.floor(Math.log(bytes) / Math.log(k));
  return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
};

const editEmployee = () => {
  router.push(`/employees?edit=${employee.value._id}`);
};

const saveEmployeeInfo = async () => {
  try {
    await api.put(`/api/employees/${employee.value._id}`, employeeForm.value);
    toast.add({
      severity: 'success',
      summary: 'Success',
      detail: 'Employee information updated',
      life: 3000
    });
    await fetchEmployee();
  } catch (error) {
    console.error('Error updating employee:', error);
    toast.add({
      severity: 'error',
      summary: 'Error',
      detail: 'Failed to update employee',
      life: 3000
    });
  }
};
</script>

